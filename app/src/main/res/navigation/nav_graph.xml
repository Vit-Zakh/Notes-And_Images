<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeScreenFragment">

    <fragment
        android:id="@+id/homeScreenFragment"
        android:name="com.sab.notesandimages.fragments.HomeScreenFragment"
        android:label="fragment_home_screen"
        tools:layout="@layout/fragment_home_screen" >
        <action
            android:id="@+id/action_homeScreenFragment_to_authorizationFragment"
            app:destination="@id/authorizationFragment" />
    </fragment>
    <fragment
        android:id="@+id/authorizationFragment"
        android:name="com.sab.notesandimages.fragments.AuthorizationFragment"
        android:label="fragment_authorization"
        tools:layout="@layout/fragment_authorization" >
        <argument
            android:name="firebaseUser"
            app:argType="com.google.firebase.auth.FirebaseUser"
            />
        <action
            android:id="@+id/action_authorizationFragment_to_notesListFragment"
            app:destination="@id/notesListFragment" />
        <action
            android:id="@+id/action_authorizationFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
        <action
            android:id="@+id/action_authorizationFragment_to_noteSettingsFragment"
            app:destination="@id/noteSettingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.sab.notesandimages.fragments.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" >
        <action
            android:id="@+id/action_registrationFragment_to_noteSettingsFragment"
            app:destination="@id/noteSettingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/noteSettingsFragment"
        android:name="com.sab.notesandimages.fragments.NoteSettingsFragment"
        android:label="fragment_note_settings"
        tools:layout="@layout/fragment_note_settings" >
        <argument
            android:name="user"
            app:argType="com.sab.notesandimages.models.User"
            />

        <argument
            android:name="nickname"
            app:argType="string"
            />

        <argument
            android:name="firebaseUser"
            app:argType="com.google.firebase.auth.FirebaseUser"
            />
        <action
            android:id="@+id/action_noteSettingsFragment_to_notesListFragment"
            app:destination="@id/notesListFragment" />
        <action
            android:id="@+id/action_noteSettingsFragment_to_authorizationFragment"
            app:destination="@id/authorizationFragment"
            app:popUpTo="@+id/homeScreenFragment"
            app:popUpToInclusive="true"/>

    </fragment>
    <fragment
        android:id="@+id/notesListFragment"
        android:name="com.sab.notesandimages.fragments.NotesListFragment"
        android:label="fragment_notes_list"
        tools:layout="@layout/fragment_notes_list" >
        <argument
            android:name="note"
            app:argType="com.sab.notesandimages.models.Note"
            />
        <argument
            android:name="firebaseUser"
            app:argType="com.google.firebase.auth.FirebaseUser"
            />
        <action
            android:id="@+id/action_notesListFragment_to_noteSettingsFragment"
            app:destination="@id/noteSettingsFragment" />
        <action
            android:id="@+id/action_notesListFragment_to_authorizationFragment"
            app:destination="@id/authorizationFragment"
            app:popUpTo="@+id/homeScreenFragment"
            app:popUpToInclusive="true"/>

    </fragment>
</navigation>